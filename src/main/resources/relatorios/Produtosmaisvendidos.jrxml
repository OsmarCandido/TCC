	<queryString>
		<![CDATA[SELECT
     SUM(quantidade) AS total,
     produto.`descricao` AS produto_descricao,
     item_pedido.`quantidade` AS item_pedido_quantidade,
     pedido.`status` AS pedido_status,
     produto.`idProduto` AS produto_idProduto,
     categoria.`descricao` AS categoria_descricao,
     pedido.`data_criacao` AS pedido_data_criacao
FROM
     `produto` produto INNER JOIN `item_pedido` item_pedido ON produto.`idProduto` = item_pedido.`produto_id`
     INNER JOIN `pedido` pedido ON item_pedido.`pedido_id` = pedido.`idPedido`
     INNER JOIN `categoria` categoria ON produto.`categoria_id` = categoria.`id`
WHERE
     pedido.`status` = ("FECHADO" OR "PAGO")
     AND pedido.`data_criacao` BETWEEN $P{data_inicio} and $P{data_fim}
GROUP BY
     produto.`descricao`]]>
	</queryString>
